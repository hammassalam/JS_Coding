if ((8-5) ===2)
console.log('This equation is correct')


if (8 === 8 && 9>6) {
    console.log ('Both conditions are true')
} else {
    console.log ('one or Both conditions are false')
}



if (8 === 8 || 9<6) {
    console.log ('one / Both conditions are true')
} else {
    console.log ('one / Both conditions are false')
}

 
 if (34>40 || 50<100) {
    console.log ('Conditions are true')
 } else if (4 !== 4){
    console.log (' Line 21 will be printed')
 } else if (20 * 20 === 100) {
    console.log('Line 23 will be printed')
 } else {
    console.log ('none of the conditions are true')
 }


